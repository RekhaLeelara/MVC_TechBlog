<div class="custom-container">
    <div class="jumbotron">
        <h3 class="text-center text-primary" style="width: 50%;">Login Form</h3>
        <br>
        
        <!-- add rows class to the username input, password input and the submit button -->
        <form class="row" action="" id="loginform" method="POST" style="margin-left: 10%;">
            <div class="form-group">
                <label for="username-lbl">Username<span class="text-danger">*</span></label>
                <input type="username" class="form-control" name="username" id="username-input" placeholder="Enter your username" style="width:50%;">
            </div>
            <div class="form-group">
                <label for="password">Password <span class="text-danger">*</span></label>
                <input type="password" class="form-control" name="password" id="password-input" placeholder="Enter Your Password" style="width:50%;">
            </div>
            <div class="form-group">
                <input type="submit" value="Login" id="login-btn" class="btn btn-info btn-block" style="width: 50%;">
            </div>
            <div class="form-group">
                <div class="row">
                    <!-- remove the col-md-8 -->
                    <div class="text-center text-primary" style="width: 50%;">
                        New user? Register <a href="/user"><b style="font-weight: bold;">here</b></a>
                    </div>
                </div>
            </div>
        </form>

        {{#if success}}
        <div class="alert alert-success alert-dismissible fade show">
            <strong>{{success}}</strong>
            <button class="close" data-dismiss="alert"><span>&times;</span></button>
        </div>
        {{/if}}
        
        {{#if error}}
        <div class="alert alert-danger alert-dismissible fade show">
            <strong>{{error}}</strong>
            <button class="close" data-dismiss="alert"><span>&times;</span></button>
        </div>
        {{/if}}

    </div>   

</div>

    <script src="/javascript/login.js"></script>