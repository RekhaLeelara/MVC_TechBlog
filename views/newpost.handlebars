<div class="custom-container">
    <div class="jumbotron">
        <h3 class="text-center text-primary" style="width: 50%;">Create Post</h3>
        <br>
        
        <!-- add rows class to the username input, password input and the submit button -->
        <div class="row" id="loginform" style="margin-left: 10%;">
            <div class="form-group">
                <label for="title-lbl">Title<span class="text-danger">*</span></label>
                <input type="newtitle" class="form-control" name="newtitle" id="newtitle-input" placeholder="Enter the title" style="width:50%;">
            </div>
            <div class="form-group">
                <label for="content">Content <span class="text-danger">*</span></label>
                <input type="newcontent" class="form-control" name="newcontent" id="newcontent-input" placeholder="Enter the content" style="width:50%;">
            </div>
            <div class="form-group">
                <input type="submit" value="Create" id="newpost" class="btn btn-info btn-block" style="width: 50%;">
            </div>
        </div>

        {{#if success}}
        <div class="alert alert-success alert-dismissible fade show">
            <strong>{{success}}</strong>
            <button class="close" data-dismiss="alert"><span>&times;</span></button>
        </div>
        {{/if}}
        
        {{#if error}}
        <div class="alert alert-danger alert-dismissible fade show">
            <strong>{{error}}</strong>
            <button class="close" data-dismiss="alert"><span>&times;</span></button>
        </div>
        {{/if}}

    </div>   

</div>

    <script src="/javascript/newpost.js"></script>